{
  "$schema": "https://json.schemastore.org/template",
  "author": "ddjerqq <ddjerqq@gmail.com>",
  "classifications": [ "ASP.NET Core", "DDD", "Clean Architecture", "Blazor", "Template", "Web" ],
  "tags": {
    "type": "solution",
    "language": "C#"
  },
  "identity": "Klean",
  "name": "Klean Architecture",
  "shortName": "klean",
  "sourceName": "Klean",
  "description": "A ready-to-use template for ASP.NET Core with Domain Driven Design - clean architecture, CQRS pattern, StyleCop, and Blazor WASM front-end",
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.vs/**",
            "**/.idea/**",
            "**/.env",
            "**/*.pfx",
            "**/node_modules/**",
            "**.min.**",
            ".template_config/**"
          ]
        }
      ]
    }
  ]
}