@using Application.Common
@using Client.Components.Ui.Card
@using Client.Components.Ui.Avatar
@using Domain.Common
@using Domain.ValueObjects
<Card>
    <Header>
        <Title>Team Members</Title>
        <Description>Invite your team members to collaborate</Description>
    </Header>
    <Content class="grid gap-6">
        <div class="flex items-center justify-between space-x-4">
            <div class="flex items-center space-x-4">
                <Avatar>
                    <AvatarImage Src="@ClaimsPrincipalExt.GetDefaultAvatar("sofia")" Alt="Sofia Davis" />
                    <AvatarFallback>SD</AvatarFallback>
                </Avatar>
                <div>
                    <p class="text-sm font-medium leading-none">Sofia Davis</p>
                    <p class="text-muted-foreground text-sm">m@example.com</p>
                </div>
            </div>
            <select id="sofia-permissions" class="@(Button.GetButtonClass(Tw, "outline", @class: "outline-none appearance-none"))">
                @foreach (var role in Enum.GetValues<Role>())
                {
                    <option value="@role">@role.GetDisplayName()</option>
                }
            </select>
        </div>

        <div class="flex items-center justify-between space-x-4">
            <div class="flex items-center space-x-4">
                <Avatar>
                    <AvatarImage Src="@(ClaimsPrincipalExt.GetDefaultAvatar("jackson"))" Alt="Jackson Lee" />
                    <AvatarFallback>JL</AvatarFallback>
                </Avatar>
                <div>
                    <p class="text-sm font-medium leading-none">Jackson Lee</p>
                    <p class="text-muted-foreground text-sm">p@example.com</p>
                </div>
            </div>
            <select id="jackson-permissions" class="@(Button.GetButtonClass(Tw, "outline", @class: "outline-none appearance-none"))">
                @foreach (var role in Enum.GetValues<Role>())
                {
                    <option value="@role">@role.GetDisplayName()</option>
                }
            </select>
        </div>
    </Content>
</Card>